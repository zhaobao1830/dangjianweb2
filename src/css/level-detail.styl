@import 'base.styl'

.level-detail
  width: 100%
  height: 100%
  .title
    ptor('font-size', 40)
    ptor('margin', 40)
    color: #000000
  .level-detail-division
    ptor('height', 20)
    background-color: #dddddd
  .detail-top
    overflow: hidden
    ptor('padding', 35)
    border-bottom: 1px solid #dddddd
    .topLeft
      float: left
      .headPortrait
        display: inline-block
        ptor('width', 86)
        ptor('height', 86)
        ptor('margin-right', 30)
        float: left
        img
          ptor('width', 86)
          ptor('height', 86)
      .nameAndSee
        display: inline-block
        float: left
        .name
          ptor('margin-top', 5)
          ptor('font-size', 30)
        .see
          ptor('font-size', 26)
          ptor('margin-top', 20)
          color: #888888
          span
            ptor('margin-right', 10)
          p
            display: inline-block
    .topRight
      float: right
      border-radius: 6px
      border: 2px solid #398fd1
      ptor('font-size', 30)
      ptor('width', 120)
      ptor('height', 60)
      ptor('line-height', 60)
      color: #398fd1
      text-align: center
  .detail-content
    ptor('padding-left', 30)
    ptor('padding-right', 30)
    ptor('margin-top', 10)
    ptor('font-size', 26)
    ptor('line-height', 50)
    color: #222222